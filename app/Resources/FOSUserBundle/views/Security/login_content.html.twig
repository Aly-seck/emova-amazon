{% trans_default_domain 'FOSUserBundle' %}

<link rel="stylesheet" href="{{ asset('css/style.css') }}">
<style> </style>
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="account-wall" >
                <img class="profile-img" src="http://aerconindia.com/img/login_icon.png"
                     alt="">
                <form class="form-signin  form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                    {% endif %}
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon " style="color: dodgerblue"><i class="glyphicon glyphicon-user"></i></span>
                        <input type="text" id="username" name="_username" class="form-control " placeholder="Email" required autofocus  value="{{ last_username }}">
                    </div>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon " style="color: dodgerblue"><i class="glyphicon glyphicon-lock"></i></span>
                        <input type="password" id="password" name="_password" class="form-control " placeholder="password" required autofocus  value="{{ last_username }}">
                    </div>
                    {#<div style="margin-bottom: 25px" class="input-group">#}
                        {#<span class="input-group-addon" style="color: dodgerblue"><i class="glyphicon glyphicon-user"></i></span>#}
                        {#<input type="password" class="form-control " id="password" name="_password" required="required" placeholder="Password">#}
                    {#</div>#}
                    <button class="btn btn-lg btn-block " style="background-color: dodgerblue"
                            type="submit"
                            id="_submit"
                            name="_submit"
                            value="{{ 'security.login.submit'|trans }}" >Se connecter
                    </button>

                    <div class="checkbox" >
                        <label class="color-text-login">
                            <input type="checkbox" > Se souvenir de moi
                        </label>
                    </div>
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                </form>
            </div>
        </div>
    </div>
</div>